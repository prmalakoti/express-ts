{
  "compilerOptions": {
    "target": "ES6",                    // Set the ECMAScript target version
    "module": "CommonJS",                // Set the module system
    "moduleResolution": "node",          // Resolve modules in Node.js style
    "strict": true,                      // Enable all strict type-checking options
    "esModuleInterop": true,             // Enable compatibility with CommonJS modules
    "skipLibCheck": true,                // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                  // Output directory for compiled JS
    "baseUrl": ".",                      // Base directory for relative paths
    "paths": {
      "*": ["node_modules/*"]            // Path resolution for modules
    }
  },
  "include": ["src/**/*.ts"],            // Include all TS files in the src directory
  "exclude": ["node_modules"]            // Exclude node_modules from compilation
}
